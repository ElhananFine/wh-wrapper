{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "removeComments": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "rootDir": "src"
    },
    "include": ["src/**/*", "index.ts"],
    "exclude": ["node_modules", "dist"]
}
